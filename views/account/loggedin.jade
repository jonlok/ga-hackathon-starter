extends ../layout

block content
  h1
    em
      center#k Kultura
  p.lead.text-center A multi-user blog
  hr
  .row
      .col-sm-6
        strong Create your blog content here:
        textarea#editor.form-control(name='editor', rows='10', cols='80', placeholder='Create your content here ...', method='post', action='/')
        script.
          // Replace the <textarea id="editor1"> with a CKEditor
          // instance, using default configuration.
          CKEDITOR.replace( 'editor' );
  form(method='post', action='/')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(for='inputTitle') Title
      input#inputTitle.form-control(type='text', placeholder='Title', name='title')
    .form-group
      label(for='inputTag') Tag
      input#inputTag.form-control(type='text', placeholder='Tag', name='tag')
    .form-group
      label(for='inputImage') Image input
      input#inputImage(type='file', name='imagefile')
      p.help-block
    button.btn.btn-default(type='submit', name='publish')
      | Publish
    button.btn.btn-success(type='submit', name='store')
      i.fa.fa-plus-square-o(aria-hidden='true')   Store
  hr
  strong| Stored cultural items:
  #newpost
    ul
      each val in content
        li= 'title: ' + val.title
        li= 'body: ' + val.body
        li= 'tag: #' + val.tag
        li= val
